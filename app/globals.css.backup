@import "tailwindcss";

:root {
  /* Wedding Color Palette */
  --forest-green: #00330a;
  --gold: #D4AF37;
  --cream: #FFF8DC;
  --sage: #87A96B;
  --blush: #F4E4E0;
  --champagne: #F7E7CE;
  --burgundy: #800020;
  --pearl: #F8F6F0;
  
  /* Semantic Colors */
  --primary: var(--forest-green);
  --secondary: var(--gold);
  --accent: var(--sage);
  --background: var(--pearl);
  --surface: #ffffff;
  --text-primary: var(--forest-green);
  --text-secondary: #4a5568;
  --text-light: #718096;
}

@theme inline {
  /* Custom Colors */
  --color-forest-green: var(--forest-green);
  --color-gold: var(--gold);
  --color-cream: var(--cream);
  --color-sage: var(--sage);
  --color-blush: var(--blush);
  --color-champagne: var(--champagne);
  --color-burgundy: var(--burgundy);
  --color-pearl: var(--pearl);
  
  /* Typography */
  --font-serif: var(--font-playfair);
  --font-sans: var(--font-montserrat);
  --font-accent: var(--font-cormorant);
  
  /* Custom font families */
  --font-family-playfair: 'Playfair Display', serif;
  --font-family-montserrat: 'Montserrat', sans-serif;
  --font-family-cormorant: 'Cormorant Garamond', serif;
  
  /* Spacing scale for elegant layouts */
  --spacing-xs: 0.5rem;
  --spacing-sm: 0.75rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  --spacing-3xl: 4rem;
  --spacing-4xl: 6rem;
  --spacing-5xl: 8rem;
  
  /* Border radius for elegant curves */
  --radius-sm: 0.5rem;
  --radius-md: 0.75rem;
  --radius-lg: 1rem;
  --radius-xl: 1.5rem;
  --radius-2xl: 2rem;
  --radius-3xl: 3rem;
  
  /* Shadows for depth */
  --shadow-elegant: 0 4px 20px -2px rgba(0, 51, 10, 0.1), 0 2px 8px -2px rgba(0, 51, 10, 0.04);
  --shadow-soft: 0 2px 10px -1px rgba(0, 51, 10, 0.06), 0 1px 4px -1px rgba(0, 51, 10, 0.04);
  --shadow-romantic: 0 8px 32px -4px rgba(212, 175, 55, 0.15), 0 4px 16px -4px rgba(212, 175, 55, 0.1);
}

/* Base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  background: var(--background);
  color: var(--text-primary);
  font-family: var(--font-family-montserrat);
  line-height: 1.6;
  letter-spacing: 0.01em;
}

/* Typography enhancements */
.font-serif {
  font-family: var(--font-playfair), 'Playfair Display', serif;
  font-weight: 400;
  line-height: 1.2;
  letter-spacing: 0.02em;
}

.font-accent {
  font-family: var(--font-cormorant), 'Cormorant Garamond', serif;
  font-weight: 400;
  line-height: 1.4;
  letter-spacing: 0.01em;
}

/* Elegant headings */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-playfair), 'Playfair Display', serif !important;
  font-weight: 400;
  line-height: 1.2;
  letter-spacing: 0.02em;
  color: var(--text-primary);
}

/* Smooth animations for elegant feel */
* {
  transition-duration: 200ms;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--pearl);
}

::-webkit-scrollbar-thumb {
  background: var(--sage);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--forest-green);
}

/* Selection colors */
::selection {
  background-color: var(--gold);
  color: var(--forest-green);
}

::-moz-selection {
  background-color: var(--gold);
  color: var(--forest-green);
}

/* Custom utilities for wedding theme */
.wedding-gradient {
  background: linear-gradient(135deg, var(--cream) 0%, var(--pearl) 50%, var(--champagne) 100%);
}

.romantic-gradient {
  background: linear-gradient(135deg, var(--blush) 0%, var(--pearl) 50%, var(--cream) 100%);
}

.elegant-shadow {
  box-shadow: var(--shadow-elegant);
}

.soft-shadow {
  box-shadow: var(--shadow-soft);
}

.romantic-shadow {
  box-shadow: var(--shadow-romantic);
}

/* Elegant input styling */
input, textarea, select {
  font-family: var(--font-family-montserrat);
  border-radius: var(--radius-md);
  border: 1px solid #e2e8f0;
  transition: all 0.2s ease;
}

input:focus, textarea:focus, select:focus {
  outline: none;
  border-color: var(--gold);
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
}

/* Elegant button styling */
button {
  font-family: var(--font-family-montserrat);
  font-weight: 500;
  letter-spacing: 0.025em;
  border-radius: var(--radius-lg);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

button:hover {
  transform: translateY(-1px);
}

/* Loading animation */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.fade-in {
  animation: fadeIn 0.6s ease-out;
}

/* Image optimization */
img {
  max-width: 100%;
  height: auto;
  object-fit: cover;
}

/* Print styles */
@media print {
  body {
    background: white !important;
    color: black !important;
  }
  
  .no-print {
    display: none !important;
  }
}

/* Reduced motion preferences */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* High contrast mode */
@media (prefers-contrast: high) {
  :root {
    --forest-green: #000;
    --gold: #b8860b;
    --text-secondary: #333;
  }
}
